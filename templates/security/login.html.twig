{% extends 'base.html.twig' %}

{% block title %}Connectez-vous{% endblock %}

{% block body %}
<div class="container my-5 shadow d-flex">
    <div class="img-login">
    </div>
    <div class="content-login container p-5 d-flex flex-column">
        <div class="register d-flex justify-content-end mb-5">
        <a href="/register">Inscrivez vous maintenant !</a>
        </div>
        <form method="post" classe="col-md-6 col-sm-12 my-5 d-flex flex-column justify-content-center">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecter en tant que : {{ app.user.username }}, <a href="{{ path('app_logout') }}">Ce déconnecter</a>
                </div>
            {% endif %}
            <div class="content-login-txt d-flex flex-column align-items-center mb-3">
                <h1 class="h3 my-3">Bienvenue sur le Marché des cueilleurs</h1>
                <p class="text-center">Rejoignez une communauté active <br> qui lutte contre le gaspillage alimentaire !</p>
            </div>
            <div class="d-flex flex-column align-items-center">
                <input type="text" value="{{ last_username }}" name="username" placeholder="Pseudo" id="inputUsername" class="form-control mb-3 col-md-4 col-sm-8" required autofocus>
                <input type="password" name="password" id="inputPassword" placeholder="Mot de passe" class="form-control col-md-4 col-sm-8 my-2" required>
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}">

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html
            #}

                <div class="checkbox mb-3 d-flex">
                    <label>
                        <input type="checkbox" name="_remember_me"> Ce souvenir de moi
                    </label>
                </div>
            </div>

            <div class="d-flex justify-content-end mr-5">
            <button class="btn btn-outline-success mb-5" type="submit">
                Connection <i class="fa fa-sign-in" aria-hidden="true"></i>
            </button>
            </div>
                <a href="/register">Vous n’avez pas de compte? Inscrivez-vous maintenant</a>
        </form>
    </div>
</div>
{% endblock %}
