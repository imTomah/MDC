{% extends 'base.html.twig' %}

{% block title %}Anti Gaspillage{% endblock %}

{% block body %}
    <h1>Bienvenue sur la page d'administration</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article_blog in article_blogs %}
            <tr>
                <td>{{ article_blog.id }}</td>
                <td>{{ article_blog.Title }}</td>
                <td>{{ article_blog.Content }}</td>
                <td>{{ article_blog.UpdatedAt ? article_blog.UpdatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('article_blog_show', {'id': article_blog.id}) }}">show</a>
                    <a href="{{ path('article_blog_edit', {'id': article_blog.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_blog_new') }}" class="btn btn-outline-success">Create new</a>
{% endblock %}
