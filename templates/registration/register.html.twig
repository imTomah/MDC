{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container my-5 shadow d-flex">
    <div class="img-register"></div>
    <div class="content-login container p-5 d-flex flex-column">
        <div class="register d-flex justify-content-end mb-5">
        <a href="/login">Vous avez un compte? Connectez-vous</a>
        </div>
        {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecter en tant que : {{ app.user.username }}, <a href="{{ path('app_logout') }}">Ce déconnecter</a>
                </div>
            {% endif %}
            <div class="content-login-txt d-flex flex-column align-items-center mb-3">
                <h1 class="h3 my-3 font-weight-normal">Bienvenue sur le Marché des cueilleurs</h1>
                <p class="text-center">Rejoignez une communauté active <br> qui lutte contre le gaspillage alimentaire !</p>
            </div>
            <div class="d-flex flex-column align-items-center">
            {{ form_start(registrationForm) }}
            <div class="row">
                <div class="col-md-3">{{ form_row(registrationForm.username) }}</div>
                <div class="col-md-6">{{ form_row(registrationForm.email) }}</div>
                <div class="col-md-4">{{ form_row(registrationForm.plainPassword) }}</div>
                <div class="row col-md-9 ml-2">
                {{ form_row(registrationForm.agreeTerms) }}

                </div>
                <button class="btn btn-outline-success mb-5">S'inscrire <i class="fa fa-sign-in" aria-hidden="true"></i></button>
            </div>
            {{ form_end(registrationForm) }}
            </div>
        </div>
        </div>
{% endblock %}